{
  "name": "edu-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Education platform with separated frontend and API",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd api && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "cd api && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:api\" \"npm run start:frontend\"",
    "start:api": "cd api && npm run start",
    "start:frontend": "cd frontend && npm run start",
    "install:all": "npm install && cd api && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules api/node_modules frontend/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}